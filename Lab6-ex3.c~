#include <stdio.h>

void factorial ( int num )
{
   	 return num = num*factorial(num-1); //code modified segment fault corrected
}

int main(void)
{
    int no,ans;
    printf("Enter the number \n");
    scanf( "%d", &no );
    ans = factorial( no );
    printf("The factorial is %d ", ans );
    return 0;
}
